extends layout

block content
		a(style="margin-left: 90%", href='/login') Вход
		h1 My Note Application
		h1= title
		form(action="/register" method="post" onsubmit="return checkPassword()")
				label(for="login") Новый логин
				input(name='login', id="login", placeholder='username', onkeyup="checkName()")
				span(id='nameValid')
				label(for="password") Новый пароль
				input(name='password', type='password', placeholder='password', id="password")
				label(for="password-confirm") Подтвердите пароль
				input(name='password-confirm', type='password', placeholder='password', id="password-confirm")
				input(type='submit', value='Регистрация')